// GENERAL STYLES

bgColor = rgb(0, 0, 0)
lightBgColor = rgb(250, 250, 250)
fontColor = rgb(252, 252, 252)
darkFontColor = rgb(10, 10, 10)
highlightColor = rgb(43, 166, 203)

*
    -webkit-tap-highlight-color rgba(0,0,0,0)

body
    background-color bgColor
    background-image linear-gradient(top, #000000 0%, #303030 70%)
    background-image -webkit-linear-gradient(top, #000000 0%, #303030 70%)
    background-image -ms-linear-gradient(top, #000000 0%, #303030 70%)
    background-attachment fixed
    font-family 'HelveticaNeue-Light', 'HelveticaNeue', Helvetica, Arial, sans-serif
    font-size 1em
    height 100%
    margin 0
    padding 0
    width 100%
    -webkit-touch-callout none
    -webkit-text-size-adjust none
    -webkit-user-select none

h2
    color rgb(255, 255, 255)
    font-size 1.6em
    font-weight normal
    margin 4px 0 12px 14px
    padding 0

label
    color fontColor

#app
    color fontColor
    position relative

.page
    display none

.row
    max-width 100% !important

.row.spaced
    margin-top 4px
    margin-bottom 4px

.panel
    background-color Transparent
    border-width 0
    color fontColor

// TOP MENU

.icon-bar
    background lightBgColor
    a label
        color darkFontColor
    a.active, a:hover
        background-color Transparent
        border-bottom 6px solid rgb(34, 133, 162)
        label
            color highlightColor
