// VARIABLES

bgColor = rgb(0, 0, 0)
lightBgColor = rgb(250, 250, 250)
fontColor = rgb(252, 252, 252)
darkFontColor = rgb(10, 10, 10)
highlightColor = rgb(43, 166, 203)
borderColour = rgb(34, 133, 162)

// GENERAL STYLES

*
    -webkit-tap-highlight-color rgba(0,0,0,0)

body
    background-color bgColor
    background-attachment fixed
    font-family 'HelveticaNeue-Light', 'HelveticaNeue', Helvetica, Arial, sans-serif
    font-size 1em
    height 100%
    margin 0
    padding 0
    width 100%
    -webkit-touch-callout none
    -webkit-text-size-adjust none
    -webkit-user-select none

h2
    color rgb(255, 255, 255)
    font-size 1.6em
    font-weight normal
    margin 4px 0 12px 14px
    padding 0

label
    color fontColor

#app
    position relative

.page
    color fontColor
    display none

.row
    max-width 100% !important

.row.spaced
    margin-top 4px
    margin-bottom 4px

.panel
    background-color Transparent
    border-width 0
    color fontColor
