doctype html
html
    head
        meta(charset="utf-8")
        meta(name="format-detection", content="telephone=no")
        meta(name="msapplication-tap-highlight", content="no")
        meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi")
        link(rel="stylesheet", type="text/css", href="app_lib.css")
        link(rel="stylesheet", type="text/css", href="app.css")
        script(type="text/javascript", src="cordova.js")
        script(type="text/javascript", src="app_lib.js")
        script(type="text/javascript", src="app.js")
        title Ayla
    body
        #app
            #topmenu.icon-bar.five-up
                a.item.dashboard(data-view="dashboard")
                    img(src="images/icons/dashboard.svg")
                    label Dashboard
                a.item.weather(data-view="weather")
                    img(src="images/icons/weather-cloudy.svg")
                    label Weather
                a.item.lights(data-view="lights")
                    img(src="images/icons/lights.svg")
                    label Lights
                a.item.media(data-view="media")
                    img(src="images/icons/media.svg")
                    label Media
                a.item.settings(data-view="settings")
                    img(src="images/icons/settings.svg")
                    label Settings

            include dashboard
            include weather
            include lights
            include media
            include settings

        script(type="text/javascript").
            app.init();
