#settings.page
    h2 Server and user settings
    form(data-abide)
        .row.spaced
            .small-12.column
                span Hostname and port of the home server
        .row
            .small-8.column
                input.host(type="text", placeholder="home server hostname", pattern="domain", required)
                small.error Invalid hostname
            .small-4.column
                input.port(type="text", placeholder="port", pattern="number", required)
                small.error Invalid port
        .row.spaced
            .small-12.column
                span Your access token
        .row
            .small-12.column
                input.token(type="text", placeholder="your personal token", pattern="alpha_numeric", required)
                small.error Access token must be alphanumeric
        .row.spaced
            .small-12.column
                span Your name
        .row
            .small-6.column
                button.save(type="submit") Save
