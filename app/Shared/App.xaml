<Application
    x:Class="Ayla.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <Style TargetType="StackPanel" x:Key="TitlePanel">
            <Setter Property="Margin" Value="12,17,0,28" />
        </Style>
        <Style TargetType="TextBlock" x:Key="TopTitle">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="9,-7,0,0" />
        </Style>
        <Style TargetType="TextBlock" x:Key="PageName">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="9,-7,0,0" />
        </Style>
        <Style TargetType="StackPanel" x:Key="ContentPanel">
            <Setter Property="Margin" Value="12,0,12,0" />
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="Grid" x:Key="ContentGrid">
            <Setter Property="Margin" Value="12,0,12,0" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </Application.Resources>

</Application>