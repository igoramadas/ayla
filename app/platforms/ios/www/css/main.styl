// GENERAL STYLES

*
    -webkit-tap-highlight-color rgba(0,0,0,0)

body
    background-color rgb(0, 0, 0)
    background-image linear-gradient(top, #000000 0%, #303030 70%)
    background-image -webkit-linear-gradient(top, #000000 0%, #303030 70%)
    background-image -ms-linear-gradient(top, #000000 0%, #303030 70%)
    background-attachment fixed
    font-family 'HelveticaNeue-Light', 'HelveticaNeue', Helvetica, Arial, sans-serif
    font-size 12px
    height 100%
    margin 0px
    padding 0px
    width 100%
    -webkit-touch-callout none
    -webkit-text-size-adjust none
    -webkit-user-select none

h1
    font-size 24px
    font-weight normal
    margin 0px
    padding 0px

#app
    color rgb(255, 255, 255)
    position relative

.page
    display none

// OVERRIDE FOUNDATION

.icon-bar
    background rgb(250, 250, 250)
    a label
        color rgb(30, 30, 30)

.row
    max-width 100% !important

.panel
    background-color Transparent
    border-width 0
    color rgb(255, 255, 255)
