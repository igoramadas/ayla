*
    -webkit-tap-highlight-color rgba(0,0,0,0)

body
    background-color rgb(0, 0, 0)
    background-image linear-gradient(top, #000000 0%, #333333 51%)
    background-image -webkit-linear-gradient(top, #000000 0%, #333333 51%)
    background-image -ms-linear-gradient(top, #000000 0%, #333333 51%)
    background-attachment fixed
    font-family 'HelveticaNeue-Light', 'HelveticaNeue', Helvetica, Arial, sans-serif
    font-size 12px
    height 100%
    margin 0px
    padding 0px
    width 100%
    -webkit-touch-callout none
    -webkit-text-size-adjust none
    -webkit-user-select none

h1
    font-size 24px
    font-weight normal
    margin 0px
    padding 0px

.app
    position relative

.page
    display none
