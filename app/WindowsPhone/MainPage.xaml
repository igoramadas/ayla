<app:PhonePage
    x:Class="Ayla.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:app="using:Ayla.App"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_OnLoaded">

    <Grid Name="LayoutRoot">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Name="TitlePanel" Grid.Row="0">
            <TextBlock Name="TopTitle" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock Name="PageName" Text="Hi there!" Style="{ThemeResource HeaderTextBlockStyle}" />
        </StackPanel>

        <Grid Name="ContentRoot" Grid.Row="1">

        </Grid>
    </Grid>
</app:PhonePage>