// GENERIC STYLES

// Import css libs
@import normalize
@import jsonhuman
@import colorpicker

// ----------------------------------------------------------------------------

// General variables
textColor = rgb(255, 255, 255)
textDarkColor = rgb(10, 10, 10)
formTextColor = rgb(30, 30, 30)
linkColor = rgb(120, 210, 240)
lightBgColor = rgb(245, 250, 255)
lightHoverColor = rgb(220, 230, 250)
gridBlockMargin = 5px
gridBlockPadding = 5px
textShadow = 0 0 5px rgb(42, 42, 42)
validColor = rgb(60, 240, 60)
invalidColor = rgb(255, 150, 140)
invalidBgColor = rgba(250, 110, 90, 0.45)
translucentBgColor = rgba(0, 0, 0, 0.35)
translucentLightBgColor = rgba(250, 250, 250, 0.75)

// Fonts
@font-face
    font-family "OpenSans"
    src url("../fonts/OpenSans-Regular-webfont.eot")
    src url("../fonts/OpenSans-Regular-webfont.eot?#iefix") format("embedded-opentype"), url("../fonts/OpenSans-Regular-webfont.woff") format("woff"), url("../fonts/OpenSans-Regular-webfont.ttf") format("truetype")
    font-weight normal
    font-style normal
@font-face
    font-family "OpenSansLight"
    src url("../fonts/OpenSans-Light-webfont.eot")
    src url("../fonts/OpenSans-Light-webfont.eot?#iefix") format("embedded-opentype"), url("../fonts/OpenSans-Light-webfont.woff") format("woff"), url("../fonts/OpenSans-Light-webfont.ttf") format("truetype")
    font-weight normal
    font-style normal
@font-face
    font-family "OpenSansBold"
    src url("../fonts/OpenSans-Bold-webfont.eot")
    src url("../fonts/OpenSans-Bold-webfont.eot?#iefix") format("embedded-opentype"), url("../fonts/OpenSans-Bold-webfont.woff") format("woff"), url("../fonts/OpenSans-Bold-webfont.ttf") format("truetype")
    font-weight normal
    font-style normal

// Body main styles
body
    background rgb(0, 0, 0) !important
    font-family OpenSansLight, sans-serif

// ----------------------------------------------------------------------------

// Main wrapper
#wrapper
    margin auto
    position relative

// Bg wrapper
#bg
    background-attach fixed
    background-image url(/images/bg/green.jpg)
    background-origin border-box
    background-repeat no-repeat
    background-size cover
    height 100%
    left 0
    opacity 0.7
    position fixed
    top 0
    width 100%
    z-index 1

// Main contents
#contents
    color textColor
    margin 13px
    position relative
    z-index 2

// Forms
textarea
    color formTextColor

// ----------------------------------------------------------------------------

// Override foundation links
a
    color linkColor

// Override foundation text color
table th, table td, h1, h2, h3, h4, h5, h6
    color textColor !important

table, table tr
    background transparent !important
table, table thead, table tbody
    border 0 !important

// Foundation: topbar navigation
.top-bar, .top-bar li a, .top-bar.expanded .title-area, .top-bar.expanded .toggle-topbar a
    background-color rgb(0, 0, 0) !important
.top-bar-section li.active a
    background-color rgb(67, 67, 67) !important
.toggle-topbar.menu-icon
    left 50px !important
.top-bar .refresh
    color textColor
    cursor pointer
    float right
    font-size 1.8em
    margin 9px 10px
    position relative
    z-index 9

.panel
    border 0 !important
    padding 0 !important
    text-shadow none

    p, li, dl
        color textColor

    h5
        display block
        margin 0
        padding 7px 10px 7px 10px

    .inner-panel
        padding 10px

.tabs
    dd, .tab-title
        a
            background-color translucentLightBgColor
            padding 9px 16px 9px 16px

    dd.active, .tabs .tab-title.active
        a
            background-color rgba(255, 255, 255, 0.9)

.maingrid h2
    margin-left -2px

// Translucent panels
.translucent
    background translucentBgColor !important
    thead
        background translucentBgColor !important
    h5, h5 a
        background translucentBgColor !important
        color textColor

.translucent-light
    background translucentLightBgColor !important
    color textDarkColor !important
    a
        color textDarkColor


// Green and red colours
span.valid
    color validColor
span.invalid
    color invalidColor
h5.invalid
    background-color invalidBgColor !important

// Sticky om top of everything
.sticky
    position relative
    z-index 9

// Summary data
.summary
    display inline-block

    h2
        display inline-block
        margin-right 28px
    span
        font-size 2.2em
        margin-right 24px
    i
        margin-right 5px

// Text shadow for text-on-backgrounds
.shadow
    text-shadow textShadow
li div h2
    text-shadow textShadow
li div .summary
    text-shadow textShadow

// ----------------------------------------------------------------------------

// Overriding datatables styles
.dataTables_wrapper
    clear both

    // Main sub classes
    .dataTables
        clear both
    .dataTables_filter
        float right
    .dataTables_length
        float left
    .odd, .even
        background lightBgColor

    // Sorting related
    .sorting_desc, .sorting_asc
        background lightHoverColor
    .sorting_1
        background lightHoverColor

// ----------------------------------------------------------------------------

// Bottom sticky announcements
#announcements
    background rgba(60, 60, 60, 0.9)
    bottom 0
    color rgb(255, 255, 255)
    left 0
    height 28px
    margin 0
    padding 0
    position fixed
    width 100%

    div
        font-size 90%
        padding 2px 0 0 8px

// Sticky error message
#announcements.error
    background rgba(240, 65, 36, 0.9)

// Sticky OK message
#announcements.ok
    background rgba(67, 172, 106, 0.9)
