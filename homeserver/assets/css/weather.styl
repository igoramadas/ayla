// WEATHER PAGE STYLES

// Weather variables
warmColor = rgb(200, 80, 80)
coldColor = rgb(20, 80, 200)
humidColor = rgb(40, 100, 180)
dryColor = rgb(180, 80, 120)
co2Color = rgb(160, 80, 200)

#weather
    table, table tr
        background transparent
    table, table thead, table tbody
        border 0

    .translucent
        height 220px

    .summary span
        background-repeat no-repeat
        background-position left
        padding-left 28px

    .summary span.temperature
        background-image url(/images/icons/thermometer-24.png)
    .summary span.humidity
        background-image url(/images/icons/humidity-24.png)
    .summary span.co2
        background-image url(/images/icons/co2-24.png)

    // Weather icon
    div.cloud, td.cloud
        background url("../images/icons/weather-cloud.png") no-repeat top right
    div.moon, td.moon
        background url("../images/icons/weather-moon.png") no-repeat top right
    div.rain, td.rain
        background url("../images/icons/weather-rain.png") no-repeat top right
    div.snow, td.snow
        background url("../images/icons/weather-snow.png") no-repeat top right
    div.sunny, td.sunny
        background url("../images/icons/weather-sunny.png") no-repeat top right
    div.sunny-cloudy, td.sunny-cloudy
        background url("../images/icons/weather-sunny-cloudy.png") no-repeat top right
    div.thunder, td.thunder
        background url("../images/icons/weather-thunder.png") no-repeat top right
    div.icon
        background-size contain
    td.icon
        background-size 26px 26px
        background-position center center

    // Weather legends
    span.legend
        display inline-block
        min-width 70px

    // Indoor rooms
    tr.a-bit-warm, tr.too-warm
        .temperature
            color warmColor
    tr.a-bit-cold, tr.too-cold
        .temperature
            color coldColor
    tr.a-bit-humid, tr.too-humid
        .humidity
            color humidColor
    tr.a-bit-dry, tr.too-dry
        .humidity
            color dryColor
    tr.co2-a-bit-high, tr.co2-too-high
        .co2
            color co2Color

    // Outside table
    li.outside
        th.icon
            width 28px

    // Bold text for extreme conditions
    .too-warm .temperature, .too-cold .temperature, .too-humid .humidity, .too-dry .humidity, .co2-too-high .co2
        font-weight bold !important

    // Canvas chart with margin.
    .chart canvas
        margin 8px 10px 1px 10px

// Specific background images and wrapper colours.
#wrapper
    td.icon
        -webkit-filter invert(100%)

#wrapper.sunny
    #bg
        background-image url(/images/weather/sunny.jpg)

#wrapper.sunny-cloudy
    #bg
        background-image url(/images/weather/sunny-cloudy.jpg)

#wrapper.cloudy
    #bg
        background-image url(/images/weather/cloudy.jpg)

#wrapper.rain
    #bg
        background-image url(/images/weather/rain.jpg)

#wrapper.thunder
    #bg
        background-image url(/images/weather/thunder.jpg)

#wrapper.snow
    #bg
        background-image url(/images/weather/snow.jpg)

#wrapper.moon
    #bg
        background-image url(/images/weather/thunder.jpg)
