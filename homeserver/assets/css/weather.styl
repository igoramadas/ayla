// WEATHER PAGE STYLES

// Weather variables
warmColor = rgb(200, 80, 80)
coldColor = rgb(20, 80, 200)
humidColor = rgb(40, 100, 180)
dryColor = rgb(180, 80, 120)
co2Color = rgb(160, 80, 200)

#weather

    // Main 2 col grid
    ul.maingrid > li > div
        min-height 500px

    // Outside weather icon
    div.icon
        margin 20px 20px 0 0
    div.cloud
        background url("../images/weather-cloud.png") no-repeat top right
    div.moon
        background url("../images/weather-moon.png") no-repeat top right
    div.rain
        background url("../images/weather-rain.png") no-repeat top right
    div.snow
        background url("../images/weather-snow.png") no-repeat top right
    div.sunny
        background url("../images/weather-sunny.png") no-repeat top right
    div.sunny-cloudy
        background url("../images/weather-sunny-cloudy.png") no-repeat top right
    div.thunder
        background url("../images/weather-thunder.png") no-repeat top right

    // Weather sub headers
    div.summary
        display inline-block
        font-size 180%
        span
            margin-right 16px

    // Weather legends
    span.legend
        display inline-block
        min-width 70px

    // Indoor rooms
    tr.a-bit-warm, tr.too-warm
        .temperature
            color warmColor
    tr.a-bit-cold, tr.too-cold
        .temperature
            color coldColor
    tr.a-bit-humid, tr.too-humid
        .humidity
            color humidColor
    tr.a-bit-dry, tr.too-dry
        .humidity
            color dryColor
    tr.co2-a-bit-high, tr.co2-too-high
        .co2
            color co2Color

    // Bold text for extreme conditions
    .too-warm .temperature, .too-cold .temperature, .too-humid .humidity, .too-dry .humidity, .co2-too-high .co2
        font-weight bold !important

    // Outdoor panel
    li.outside
        h5
            clear both