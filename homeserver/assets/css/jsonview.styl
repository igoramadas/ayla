.jsonview
    font-family monospace

    .prop
        font-weight bold
    .null
        color red
    .bool
        color blue
    .num
        color blue
    .string
        color green
    .collapser
        position absolute
        left -1em
        cursor pointer

    h1
        font-size 1.2em

    ul
        list-style none !important
        margin 0 0 0 2em
        padding 0

    li
        position relative
        list-style none !important

        &:after
            content ','
        &:last-child
            &:after
                content ''

    .errormessage
        font-family monospace