// API PAGE STYLES

#api
    table td
        vertical-align top !important

    .tabs-content
        .panel
            overflow hidden
            height 310px

    .clip
        overflow hidden
        text-overflow: ellipsis

    .auth
        a
            margin-left 10px

    .data
        height 100%
        overflow auto

    .data > table
        margin-bottom 1px

    // JSON transformed to tables
    .data-table
        table
            margin 0 7px 1px 7px
            width 100%
            th
                white-space nowrap
                width 20%
            th, td, span
                overflow hidden
                text-overflow: ellipsis

      span.info
        margin-right 8px
