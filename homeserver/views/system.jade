#system
    h1 System
    ul.maingrid.small-block-grid-1
        li
            dl.tabs(data-tab)
                dd
                    a(href="#settings", title="Module's settings") all settings
                dd
                    a(href="#jobs", title="OAuth parameters") all jobs
                dd
                    a(href="#hardware", title="Errors triggered by this module") hardware

            .tabs-content
                #settings.content.panel
                    h5 settings
                    .inner-panel
                        .data-table !{JSON.stringify(settings)}

                #jobs.content.panel
                    table
                        thead
                            th Job
                            th Schedule
                            th Last run
                        tbody
                            for job in jobs
                                tr
                                    td
                                        span #{job.id}
                                    td
                                        if isNaN(job.schedule)
                                            span #{job.schedule.join(", ")}
                                        else
                                            span every #{job.schedule} seconds
                                    td
                                        if job.endTime.year() > 2000
                                            span #{job.endTime.format("lll")}
                                        else
                                            span Never

                #hardware.content.panel
                    .inner-panel
                        div
                            span.info Hostname
                            span #{server.hostname}
                        div
                            span.info Memory
                            span #{server.memoryUsage}% (#{server.memoryTotal})
                        div
                            span.info CPU Load
                            span #{server.loadAvg}
                        div
                            span.info IP(s)
                            span #{server.ips.join(", ")}
                        div
                            span.info Process ID
                            span #{server.process.pid}
                        div
                            span.info Process Memory
                            span #{server.process.memoryUsage}
                        div
                            span.info Uptime
                            span #{server.uptime}
