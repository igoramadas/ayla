doctype html
html.no-js(lang="en")
    head
        title #{pageTitle} - Ayla Home Server
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        meta(name="mobile-web-app-capable", content="yes")
        link(rel="icon", type="image/x-icon", href="/favicon.ico")

        script(src="/socket.io/socket.io.js")
        script window.ayla = {};

        != css("styles")
        for c in loadCss
            != css(c)

        != js("scripts")
        for j in loadJs
            != js(j)
    body
        #wrapper
            .fixed.top-wrapper
                nav#header.top-bar(data-topbar, role="navigation")
                    ul.title-area
                        li.name
                            h1
                                a(href="/start") Ayla
                        li.toggle-topbar.menu-icon
                            a(href="#")
                                span Menu
                    section.top-bar-section
                        ul.left
                            for m, key in managerModules
                                li(class="#{m.title.toLowerCase()}")
                                    a(href="/manager/#{m.title.toLowerCase()}")
                                        span #{m.title}

            block contents

            #announcements(style="display: none")
                div
                    span.message
                    span.details
