extends layout

block contents
    #lights
        div.lights
            ul.small-block-grid-3(data-bind="foreach: hue")
                li
                    h5(data-bind="text: room")
                    div.clearfix(data-bind="foreach: lights")
                        span(data-bind="text: name")
                        div.state(data-bind="with: state")
                            button.button.secondary.tiny.right(data-bind="text: on ? 'ON' : 'OFF', style: {background: on ? color : ''}")
