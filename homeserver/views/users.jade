extends layout

block contents
    #users
        ul.maingrid.small-block-grid-1.large-block-grid-2

            li.userlist
                div
                    h2 Users
                    table
                        thead
                            tr
                                th.name Name
                                th.email Email
                                th.status Home
                                th.location Last location
                        tbody(data-bind="foreach: {data: users, as: 'username'}")
                            tr.user(data-bind="with: $root[username]")
                                td.title(data-bind="text: name")
                                td.email(data-bind="text: email")
                                td.status(data-bind="css: onlineCss")
                                    span.fa.fa-lg.fa-mobile
                                td.location(data-bind="text: location")

            li.bluetooth
                div
                    h2 Bluetooth devices
                    table
                        thead
                            tr
                                th.device Device
                                th.type Type
                                th.mac Mac
                        tbody(data-bind="foreach: bluetoothDevices")
                            tr
                                td.device(data-bind="text: name")
                                td.type(data-bind="text: type")
                                td.mac(data-bind="text: mac")
